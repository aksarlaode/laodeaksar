// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "postgresql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id      String @id @default(cuid())
    title   String
    content String
    userId  String

    message Message[]
}

model Message {
    id           String @id @default(cuid())
    fromUser     String
    fromUserName String
    message      String

    post   Post   @relation(fields: [postId], references: [id])
    postId String

    @@index([postId])
}
